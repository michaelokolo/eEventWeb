@page "{EventId:int}"
@model Web.Pages.Organizer.ApplicationsModel
@{
	ViewData["Title"] = "Applications";
}
<h2> Applications for Event @Model.EventId </h2>
<table class= "table">
    <thead>
        <tr>
            <th> Freelancer </th>
            <th> Status </th>
            <th> Applied On </th>
            <th> Actions </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var app in Model.Applications)
    {
            <tr>
                <td> @app.FreeLancerId </td>
                <td> @app.Status </td>
                <td> @app.AppliedOn.ToString("yyyy-MM-dd") </td>
                <td>
                    <form method = "post" asp - page - handler = "Review">
                        <input type = "hidden" name = "applicationId" value = "@app.Id"/>
                        <select name = "status" class= "form-control d-inline" style = "width:auto;">
                            <option value = "Accepted" > Accept </option>
                            <option value = "Rejected" > Reject </option>
                            <option value = "Withdrawn" > Withdraw </option>
                        </select>
                        <button type = "submit" class= "btn btn-primary btn-sm"> Update </button>
                    </form>
                </td>
            </tr>
    }
    </tbody>
</table>